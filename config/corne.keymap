    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            label = "Base";
            bindings = <
&kp ESCAPE      &kp Q  &kp W  &kp E      &kp R  &kp T        &Resupply               &Arc_Thrower  &Orbital_Laser     &Orbital_EMS      &Eagle_RocketPods  &Eagle_Straffing
&kp TAB         &kp A  &kp S  &kp D      &kp F  &kp G        &Sheild_Generator_Pack  &Jet_Pack     &Guard_dog         &Tesla_Tower      &Mech              &Eagle_500
&kp LEFT_SHIFT  &kp Z  &kp X  &kp C      &kp V  &kp B        &reinforce              &Supply_pack  &Grenade_Launcher  &Eagle_Airstrike  &Orbital_Laser     &Eagle_500
                              &kp LCTRL  &mo 1  &kp SPACE    &Jet_Pack               &Jet_Pack     &Arc_Thrower
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            label = "Lower";
            bindings = <
&none  &kp ESCAPE    &kp LC(C)       &kp LC(V)       &kp LC(X)     &kp N9          &kp N7   &kp N8  &kp N9    &kp N9      &kp N0  &bt BT_CLR
&none  &kp TAB       &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT     &kp UP_ARROW    &kp N4   &kp N5  &kp N6    &kp RIGHT   &trans  &none
&none  &bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3  &bt BT_SEL 4    &kp N1   &kp N2  &kp N3    &kp DOLLAR  &trans  &none
                                     &kp LGUI        &trans        &kp SPACE       &kp RET  &kp N0  &kp RALT
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            label = "Raise";
            bindings = <
&kp TAB    &kp EXCL  &kp AT  &kp HASH  &kp DLLR  &kp PRCNT    &kp CARET  &kp AMPS   &kp KP_MULTIPLY  &kp LPAR  &kp RPAR  &kp BSPC
&kp LCTRL  &trans    &trans  &trans    &trans    &trans       &kp MINUS  &kp EQUAL  &kp LBKT         &kp RBKT  &kp BSLH  &kp GRAVE
&kp LSHFT  &trans    &trans  &trans    &trans    &trans       &kp UNDER  &kp PLUS   &kp LBRC         &kp RBRC  &kp PIPE  &kp TILDE
                             &kp LGUI  &trans    &kp SPACE    &kp RET    &trans     &kp RALT
            >;
        };
